<p id = "notice"><%= notice %></p>

<h1 style="text-align: center;">投稿記事一覧</h1>

<div class="row">
<ul>
    <% @articles.each do |article| %>
      <div class="col-xs-6 col-lg-4" style="padding-bottom: 20px;">
    <li>
      <h4>
      <%= link_to article.title, article_path(article.id) %>
      <% if "#{article.picture}" =~ /.*(.png|.jpg|.gif)$/ %>
       📎
      <% end %>
    </h4>
      カテゴリー:<%= article.category&.name %><br>
      投稿者:<%= article.user&.name %>
      <% if article.user_id == current_user&.id %>
        <%= link_to "編集", edit_article_path(article.id) %>
        <%= link_to "削除", article_path(article.id), method: :delete, data: {confirm: "本当に削除しますか？"} %>
      <% end %>
        </div>
    </li>
    <% end %>

</ul>
</div>

<hr>
<%= paginate @articles %>

<% if user_signed_in? %>
  <p><%= link_to "新規記事作成", new_article_path %></p>
  <p><%= link_to "カテゴリー確認・編集", categories_path %></p>
<% else %>
  <p><%= link_to "ログインして記事を投稿する", new_user_session_path %></p>
<% end %>
