<h1>新規記事作成</h1>

<%= form_for @article do |f| %>

<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>
</p>

<p>
  <%= f.label :sentence %>
  <%= f.text_area :sentence %>
</p>

<p>
<%= f.label :picture %><br>
<%= f.file_field :picture %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>
