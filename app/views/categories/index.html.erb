<h1>カテゴリー一覧</h1>

<ul>
  <% @categories.each do |category| %>
  <li>
    <%= category.name %>
    <%= link_to "編集", edit_category_path(category.id) %>
    <%= link_to "削除", category_path(category.id), method: :delete, data: {confirm: "このカテゴリーに属する記事も全て削除されます。本当に削除しますか？"} %>
 </li>
  <% end %>
</ul>

<hr>
<%= paginate @categories %>

<p><%= link_to "新規カテゴリー作成", new_category_path %></p>
